<Window x:Class="Kalkulacka.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Kalkulačka" Height="650" Width="420"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="120"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- DISPLAY -->
        <TextBox x:Name="Display"
         Text="0"
         FontSize="48"
         HorizontalContentAlignment="Right"
         VerticalContentAlignment="Bottom"/>

        <!-- BUTTONS -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <!-- Row 0 -->
            <Button Content="%" Click="Operator_Click"/>
            <Button Content="CE" Grid.Column="1" Click="CE_Click"/>
            <Button Content="C" Grid.Column="2" Click="C_Click"/>
            <Button Content="⌫" Grid.Column="3" Click="Backspace_Click"/>

            <!-- Row 1 -->
            <Button Content="1/x" Grid.Row="1" Click="Reciprocal_Click"/>
            <Button Content="x²" Grid.Row="1" Grid.Column="1" Click="Square_Click"/>
            <Button Content="√x" Grid.Row="1" Grid.Column="2" Click="Sqrt_Click"/>
            <Button Content="÷" Grid.Row="1" Grid.Column="3" Click="Operator_Click"/>

            <!-- Row 2 -->
            <Button Content="7" Grid.Row="2" Click="Number_Click"/>
            <Button Content="8" Grid.Row="2" Grid.Column="1" Click="Number_Click"/>
            <Button Content="9" Grid.Row="2" Grid.Column="2" Click="Number_Click"/>
            <Button Content="×" Grid.Row="2" Grid.Column="3" Click="Operator_Click"/>

            <!-- Row 3 -->
            <Button Content="4" Grid.Row="3" Click="Number_Click"/>
            <Button Content="5" Grid.Row="3" Grid.Column="1" Click="Number_Click"/>
            <Button Content="6" Grid.Row="3" Grid.Column="2" Click="Number_Click"/>
            <Button Content="−" Grid.Row="3" Grid.Column="3" Click="Operator_Click"/>

            <!-- Row 4 -->
            <Button Content="1" Grid.Row="4" Click="Number_Click"/>
            <Button Content="2" Grid.Row="4" Grid.Column="1" Click="Number_Click"/>
            <Button Content="3" Grid.Row="4" Grid.Column="2" Click="Number_Click"/>
            <Button Content="+" Grid.Row="4" Grid.Column="3" Click="Operator_Click"/>

            <!-- Row 5 -->
            <Button Content="+/−" Grid.Row="5" Click="Sign_Click"/>
            <Button Content="0" Grid.Row="5" Grid.Column="1" Click="Number_Click"/>
            <Button Content="," Grid.Row="5" Grid.Column="2" Click="Decimal_Click"/>

            <Button Content="="
                    Grid.Row="5"
                    Grid.Column="3"
                    Background="#0078D7"
                    Foreground="White"
                    FontSize="20"
                    Click="Equals_Click"/>
        </Grid>
    </Grid>
</Window>
