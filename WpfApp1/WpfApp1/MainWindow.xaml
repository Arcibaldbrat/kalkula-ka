<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Calculator" Height="520" Width="360" ResizeMode="CanMinimize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="12"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBox x:Name="Display"
                 Grid.Row="0"
                 Text="0"
                 FontSize="36"
                 FontWeight="SemiBold"
                 HorizontalContentAlignment="Right"
                 VerticalContentAlignment="Center"
                 IsReadOnly="True"
                 Background="#FFEEEEEE"
                 BorderThickness="1"
                 Padding="8"/>

        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Row 0 -->
            <Button Grid.Row="0" Grid.Column="0" Content="C" Click="Clear_Click" FontSize="18"/>
            <Button Grid.Row="0" Grid.Column="1" Content="⌫" Click="Backspace_Click" FontSize="18"/>
            <Button Grid.Row="0" Grid.Column="2" Content="±" Click="ToggleSign_Click" FontSize="18"/>
            <Button Grid.Row="0" Grid.Column="3" Content="÷" Click="Operator_Click" FontSize="18"/>

            <!-- Row 1 -->
            <Button Grid.Row="1" Grid.Column="0" Content="7" Click="Digit_Click" FontSize="18"/>
            <Button Grid.Row="1" Grid.Column="1" Content="8" Click="Digit_Click" FontSize="18"/>
            <Button Grid.Row="1" Grid.Column="2" Content="9" Click="Digit_Click" FontSize="18"/>
            <Button Grid.Row="1" Grid.Column="3" Content="×" Click="Operator_Click" FontSize="18"/>

            <!-- Row 2 -->
            <Button Grid.Row="2" Grid.Column="0" Content="4" Click="Digit_Click" FontSize="18"/>
            <Button Grid.Row="2" Grid.Column="1" Content="5" Click="Digit_Click" FontSize="18"/>
            <Button Grid.Row="2" Grid.Column="2" Content="6" Click="Digit_Click" FontSize="18"/>
            <Button Grid.Row="2" Grid.Column="3" Content="−" Click="Operator_Click" FontSize="18"/>

            <!-- Row 3 -->
            <Button Grid.Row="3" Grid.Column="0" Content="1" Click="Digit_Click" FontSize="18"/>
            <Button Grid.Row="3" Grid.Column="1" Content="2" Click="Digit_Click" FontSize="18"/>
            <Button Grid.Row="3" Grid.Column="2" Content="3" Click="Digit_Click" FontSize="18"/>
            <Button Grid.Row="3" Grid.Column="3" Content="+" Click="Operator_Click" FontSize="18"/>

            <!-- Row 4 -->
            <Button Grid.Row="4" Grid.Column="0" Content="0" Click="Digit_Click" FontSize="18" Grid.ColumnSpan="2"/>
            <Button Grid.Row="4" Grid.Column="2" Content="." Click="Digit_Click" FontSize="18"/>
            <Button Grid.Row="4" Grid.Column="3" Content="=" Click="Equals_Click" FontSize="18"/>
        </Grid>
    </Grid>
</Window>
